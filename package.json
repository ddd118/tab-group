{
  "name": "tab-router",
  "displayName": "Tab Router",
  "description": "名前によるタブグループに自動仕分けします",
  "version": "0.0.1",
  "publisher": "your-name-here",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Tab Router",
      "properties": {
        "tabRouter.rules": {
          "type": "array",
          "description": "Rules to route editors to specific groups based on regex pattern.",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "JavaScript RegExp as string. Applied to fileName, uri, or languageId."
              },
              "targetGroup": {
                "type": "integer",
                "minimum": 1,
                "maximum": 9,
                "description": "Target editor group index (1 = left-most)."
              },
              "matchField": {
                "type": "string",
                "enum": [
                  "fileName",
                  "uri",
                  "languageId"
                ],
                "default": "fileName",
                "description": "Which field to apply the regex to."
              }
            },
            "required": [
              "pattern",
              "targetGroup"
            ]
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
