{
  "name": "tab-router",
  "displayName": "Tab Router",
  "description": "Match tabs by RegExp and route them to specific editor groups (supports webviews/terminal tabs via tabGroups).",
  "version": "0.0.2",
  "publisher": "ddd118",                 
  "license": "MIT",                      
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "keywords": ["tabs", "tab", "editor", "routing", "group"],
  "repository": {
    "type": "git",
    "url": "https://github.com/ddd118/tab-group.git"
  },
  "bugs": {
    "url": "https://github.com/ddd118/tab-group/issues"
  },
  "homepage": "https://github.com/ddd118/tab-group#readme",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tabRouter.showActiveTabInfo",
        "title": "Tab Router: Show Active Tab Info"
      },
      {
        "command": "tabRouter.dumpTabGroups",
        "title": "Tab Router: Dump Tab Groups"
      },
      {
        "command": "tabRouter.routeActiveTabNow",
        "title": "Tab Router: Route Active Tab Now"
      }
    ],
    "configuration": {
      "title": "Tab Router",
      "properties": {
        "tabRouter.rules": {
          "type": "array",
          "default": [],
          "description": "Routing rules evaluated against the active tab. First match wins.",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "JavaScript RegExp string."
              },
              "targetGroup": {
                "type": "integer",
                "minimum": 1,
                "maximum": 9,
                "description": "Target editor group (ViewColumn). 1 = left-most."
              },
              "matchField": {
                "type": "string",
                "enum": [
                  "tabLabel",
                  "tabInputType",
                  "viewType",
                  "fileName",
                  "uri",
                  "languageId"
                ],
                "default": "fileName",
                "description": "Which value to test against the pattern."
              }
            },
            "required": [
              "pattern",
              "targetGroup"
            ]
          }
        },
        "tabRouter.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging to the 'Tab Router' output channel."
        },
        "tabRouter.debounceMs": {
          "type": "number",
          "default": 120,
          "minimum": 0,
          "description": "Debounce milliseconds for tab change events (VS Code may fire multiple times)."
        },
        "tabRouter.requireTargetGroupExists": {
          "type": "boolean",
          "default": true,
          "description": "If true, do not move unless the target group (ViewColumn) already exists."
        },
        "tabRouter.autoCreateGroups": {
          "type": "boolean",
          "default": false,
          "description": "If true and target group does not exist, try to create groups by splitting editor to the right."
        },
        "tabRouter.maxAutoCreateGroups": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "description": "Safety limit for autoCreateGroups. 0 means unlimited (NOT recommended)."
        },
        "tabRouter.skipPinnedTabs": {
          "type": "boolean",
          "default": false,
          "description": "If true, do not route pinned tabs."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
